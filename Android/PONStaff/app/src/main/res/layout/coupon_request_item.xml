<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.hunters.ponstaff.customs.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joel Rivera"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/request_font_title_size"
                android:id="@+id/tv_request_coupon_title"/>
            <com.hunters.ponstaff.customs.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="12 minute ago"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/request_font_time_size"
                android:id="@+id/tv_request_coupon_time"/>
        </RelativeLayout>
        <com.hunters.ponstaff.customs.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Off 40%"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/request_font_des_size"
            android:id="@+id/tv_request_coupon_description"/>
    </LinearLayout>
</LinearLayout>