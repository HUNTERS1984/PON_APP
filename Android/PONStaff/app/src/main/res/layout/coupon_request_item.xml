<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">
    <ImageView
        android:layout_width="@dimen/icon_size_item"
        android:layout_height="@dimen/icon_size_item"
        android:padding="10dp"
        android:src="@drawable/ic_plane_paper"
        android:scaleType="fitXY"
        android:background="@drawable/circle_stroke_blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <com.hunters.ponstaff.customs.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/tv_request_coupon_time"
                android:text="Joel Rivera"
                android:textColor="@color/blue_sky"
                android:textSize="@dimen/request_font_title_size"
                android:id="@+id/tv_request_coupon_title"/>
            <com.hunters.ponstaff.customs.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12 minute ago"
                android:textColor="@color/grey"
                android:textSize="@dimen/request_font_time_size"
                android:id="@id/tv_request_coupon_time"/>
        </RelativeLayout>
        <com.hunters.ponstaff.customs.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:text="Off 40%"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/request_font_des_size"
            android:id="@+id/tv_request_coupon_description"/>
    </LinearLayout>
</LinearLayout>