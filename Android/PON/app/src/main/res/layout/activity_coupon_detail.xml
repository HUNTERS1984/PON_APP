<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.design.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/slide_image_height"
                android:id="@+id/rl_coupon_photo">

                <android.support.v4.view.ViewPager
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/pager_coupons_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v4.view.ViewPager>

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/page_indicator_coupons_photo"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp"
                    android:background="@color/background_black_transparent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/ic_demo_restaurant"
                        android:scaleType="fitXY"/>
                    <com.hunters1984.pon.customs.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"
                        android:text="Drinking"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_back"
                    android:scaleType="fitXY"
                    android:layout_margin="15dp"
                    android:id="@+id/iv_back"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/slide_image_height"
                android:orientation="vertical"
                android:scrollbars="vertical">
                <com.hunters1984.pon.customs.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:text="Coupons title"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"/>
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/light_grey_stroke_icon"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:gravity="center_vertical">
                    <com.hunters1984.pon.customs.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coupons description"
                        android:textColor="@color/grey"
                        android:id="@+id/tv_title"/>
                    <com.hunters1984.pon.customs.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_title"
                        android:text="Coupons description"
                        android:textColor="@color/pink"/>
                    <ImageView
                        android:layout_width="@dimen/icon_size_menu"
                        android:layout_height="@dimen/icon_size_menu"
                        android:src="@drawable/ic_non_favourite"
                        android:scaleType="fitXY"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <com.hunters1984.pon.customs.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Grab the NEW Soft Drink Coupons and Printable Soft Drink Coupons to get great savings on your favorite soft drinks! Combine Printable Coupons and Manufacturers Coupons with Store Deals to get the best savings. This is a great way to save at the grocery store for your family."
                    android:textColor="@color/grey"/>

                <fragment
                    android:id="@+id/map_shop"
                    android:name="com.google.android.gms.maps.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/ic_location_coupon_detail"
                        android:scaleType="fitXY"/>
                    <com.hunters1984.pon.customs.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_margin_left"
                        android:text="location"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/light_grey_stroke_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/ic_time_coupons_detail"
                        android:scaleType="fitXY"/>
                    <com.hunters1984.pon.customs.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_margin_left"
                        android:text="history"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/light_grey_stroke_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/ic_contact_coupons_detail"
                        android:scaleType="fitXY"/>
                    <com.hunters1984.pon.customs.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_margin_left"
                        android:text="contact"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <com.hunters1984.pon.customs.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Product Related"
                    android:textColor="@color/colorPrimary"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:id="@+id/rv_list_related_coupons"/>

            </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="86dp"
            android:clickable="true"
            android:src="@drawable/ic_share"
            app:backgroundTint="@color/white"
            app:layout_anchor="@id/rl_coupon_photo"
            app:layout_anchorGravity="bottom|right|end" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:src="@drawable/ic_non_favourite"
            app:backgroundTint="@color/white"
            app:layout_anchor="@id/rl_coupon_photo"
            app:layout_anchorGravity="bottom|right|end" />

    </android.support.design.widget.CoordinatorLayout>
</ScrollView>